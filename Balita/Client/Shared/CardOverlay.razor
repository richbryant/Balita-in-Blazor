<Blazorise.Link To="@LinkUrl" Class="a-block d-flex align-items-center height-md" Style="@BackgroundStyle">
    <div class="text">
        <div class="post-meta">
            <span class="category">@Category</span>
            <span class="mr-2">@PostDate </span> &bullet;
            <span class="ml-2"><span class="fa fa-comments"></span> @CommentCount</span>
        </div>
        <h3>@HeadingText</h3>
    </div>
</Blazorise.Link>
