@page "/"

<section class="site-section pt-5">
    <Container>
        <Row>
            <Column ColumnSize="ColumnSize.Is12.OnTablet">
                <Carousel />
            </Column>
        </Row>
        <Row>
            <Column ColumnSize="ColumnSize.Is6.OnDesktop.Is4.OnWidescreen">
                <Card Class="mb-3">
                    <CardOverlay LinkUrl="/" ImageUrl="images/img_2.jpg" Category="Travel" PostHeadline="Twats in the sunrise"/>
                </Card>
            </Column>
            
            <Column ColumnSize="ColumnSize.Is6.OnDesktop.Is4.OnWidescreen">
                <Card Class="mb-3">
                    <CardOverlay LinkUrl="/" ImageUrl="images/img_3.jpg" Category="Lifestyle" PostHeadline="Lockdown hair exposed"/>
                </Card>
            </Column>
            
            <Column ColumnSize="ColumnSize.Is6.OnDesktop.Is4.OnWidescreen">
                <Card Class="mb-3">
                    <CardOverlay LinkUrl="/" ImageUrl="images/img_4.jpg" Category="Travel" PostHeadline="Extreme Bus Waiting"/>
                </Card>
            </Column>
        </Row>
    </Container>
    
</section>

<section class="site-section py-sm">
    <Container>
        <Row>
            <Column ColumnSize="ColumnSize.Is6">
                <DisplayHeading Size="DisplayHeadingSize.Is4" Class="mb-4">Top Posts</DisplayHeading>
            </Column>
        </Row>
        <Row Class="blog-entries">
            <Column ColumnSize="ColumnSize.Is2.OnDesktop.Is8.OnWidescreen" Class="main-content">
                <Row>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_5.jpg" Category="Food" CommentCount="5" PostHeadline="Some sort of a wrap" />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_6.jpg" Category="Travel" CommentCount="1" PostHeadline="Girl on big hill" />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_7.jpg" Category="Travel" CommentCount="7" PostHeadline="Indoor umbrellas" />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_8.jpg" Category="Travel" CommentCount="4" PostHeadline="Looks like Italy" />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_9.jpg" Category="Travel" CommentCount="11" PostHeadline="Definitely the Caribbean or even possibly not.  It's an excuse for a word-wrap title" />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_10.jpg" Category="Travel" CommentCount="1" PostHeadline="Bridge with mist, but also quite a long title so that I can check that." />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_11.jpg" Category="Travel" CommentCount="1" PostHeadline="Holiday Degloving" />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is6.OnDesktop">
                        <BlogPostCard LinkUrl="/" ImageUrl="images/img_12.jpg" Category="Travel" CommentCount="1" PostHeadline="Vodka by the Wine Glass" />
                    </Column>
                </Row>
                <Row>
                    <Column ColumnSize="ColumnSize.Is12.OnDesktop">
                        <Pagination Margin="Margin.Is2.FromTop.IsAuto.FromLeft.IsAuto.FromRight" Class="pagination">
                            <PaginationItem>
                                <PaginationLink>
                                    <span aria-hidden="true">Prev</span>
                                </PaginationLink>
                            </PaginationItem>
                            <PaginationItem>
                                <PaginationLink>
                                    1
                                </PaginationLink>
                            </PaginationItem>
                            <PaginationItem>
                                <PaginationLink>
                                    2
                                </PaginationLink>
                            </PaginationItem>
                            <PaginationItem>
                                <PaginationLink>
                                    3
                                </PaginationLink>
                            </PaginationItem>
                            <PaginationItem>
                                <PaginationLink>
                                    <span aria-hidden="true">Next</span>
                                </PaginationLink>
                            </PaginationItem>
                        </Pagination>
                    </Column>
                </Row>
                
                <Row>
                    <Column ColumnSize="ColumnSize.Is12.OnDesktop">
                        <DisplayHeading Size="DisplayHeadingSize.Is4">More Posts</DisplayHeading>
                    </Column>
                    
                    <Column ColumnSize="ColumnSize.Is12.OnDesktop">
                        <HorizontalCard ImageUrl="images/img_10.jpg" LinkUrl="/" Category="Travel" CommentCount="1" PostHeadline="Bridge with mist, but also quite a long title so that I can check that."/>
                    </Column>
                    
                    <Column ColumnSize="ColumnSize.Is12.OnDesktop">
                        <HorizontalCard LinkUrl="/" ImageUrl="images/img_11.jpg" Category="Travel" CommentCount="1" PostHeadline="Holiday Degloving" />
                    </Column>
                    <Column ColumnSize="ColumnSize.Is12.OnDesktop">
                        <HorizontalCard LinkUrl="/" ImageUrl="images/img_12.jpg" Category="Travel" CommentCount="1" PostHeadline="Vodka by the Wine Glass" />
                    </Column>
                </Row>

            </Column>
            
            <Sidebar/>
        </Row>
        
        
    </Container>
</section>
